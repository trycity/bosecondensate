#include "EffectiveRangeF.h"

using namespace QMC;

EffectiveRangeF::EffectiveRangeF(double as):m_as(as)
{
}

EffectiveRangeF::~EffectiveRangeF()
{
}

EffectiveRangeF::setScatteringLength(double as)
{
	m_as = as;
}

double EffectiveRangeF::operator()(double rij)
{
	return (1.0 - m_as/rij);
}
